rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      allow read, update, delete: if isOwner(userId);
    }

    match /userProfiles/{userId} {
      allow get: if true;
      allow create, update: if isOwner(userId);
    }
    
    match /communities/{communityId} {
      // Allow public read access for communities
      allow list, get: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && resource.data.creatorId == request.auth.uid;

      match /posts/{postId} {
        // Allow public read access for posts
        allow list, get: if true;
        allow create: if isSignedIn();
        allow update, delete: if isSignedIn() && resource.data.creatorId == request.auth.uid;

        match /comments/{commentId} {
          // Allow public read access for comments
          allow list, get: if true;
          allow create: if isSignedIn();
          allow update, delete: if isSignedIn() && resource.data.creatorId == request.auth.uid;

           // Rules for comment votes
          match /votes/{userId} {
            allow read: if true;
            allow write: if isOwner(userId);
          }
        }
        
        // Rules for post votes
        match /votes/{userId} {
            allow read: if true;
            allow write: if isOwner(userId);
        }
      }
    }

    // Collection group queries are now covered by the more specific rules above.
    // These can be kept for absolute clarity or removed. For this fix, they are removed to avoid redundancy.
  }
}
