/**
 * @fileoverview Firestore Security Rules for Prototyper.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    /**
     * @description Grants access to user-specific data only to the authenticated user.
     * @path /users/{userId}
     */
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    /**
     * @description Defines rules for the 'communities' collection and its subcollections.
     *              - Allows public read access to all communities and their nested content.
     *              - Restricts write operations to authenticated users with specific roles (creator/author).
     */
    match /communities/{communityId} {
      // Allow public read access to any single community document and list of communities.
      allow read: if true;
      
      // Allow creating a community if the user is signed in, the creatorId matches, and the data is valid.
      allow create: if isSignedIn() 
                      && request.resource.data.creatorId == request.auth.uid 
                      && isCommunityDataValid(request.resource.data);
      
      // Allow updating a community only if the user is the creator and the data is valid.
      allow update: if isCreator(resource) 
                      && isCommunityDataValid(request.resource.data);
      
      // Allow deleting a community only if the user is the creator.
      allow delete: if isCreator(resource);

      /**
       * @description Defines rules for the 'posts' subcollection within a community.
       */
      match /posts/{postId} {
        // read is inherited from the parent rule `allow read: if true;`
        allow create: if isSignedIn() 
                        && request.resource.data.authorId == request.auth.uid 
                        && isPostDataValid(request.resource.data);
        allow update: if isAuthor(resource) && isPostDataValid(request.resource.data);
        allow delete: if isAuthor(resource);

        /**
         * @description Defines rules for the 'comments' subcollection within a post.
         */
        match /comments/{commentId} {
          // read is inherited from the parent rule `allow read: if true;`
          allow create: if isSignedIn()
                          && request.resource.data.authorId == request.auth.uid
                          && isCommentDataValid(request.resource.data);
          allow update: if isCommentAuthor(resource) && isCommentDataValid(request.resource.data);
          allow delete: if isCommentAuthor(resource);
        }
      }
    }


    // ---- Helper functions ----

    /**
     * @description Checks if the user is signed in.
     * @return {bool} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the request is made by the owner of the document.
     * @param {string} userId The user ID to compare against the request's auth UID.
     * @return {bool} True if the user ID matches the auth UID, false otherwise.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the requesting user is the creator of the community.
     * @param {object} community The community resource document.
     * @return {bool} True if the user is the creator, false otherwise.
     */
    function isCreator(community) {
      return isSignedIn() && community.data.creatorId == request.auth.uid;
    }

    /**
     * @description Checks if the requesting user is the author of the post.
     * @param {object} post The post resource document.
     * @return {bool} True if the user is the author, false otherwise.
     */
    function isAuthor(post) {
      return isSignedIn() && post.data.authorId == request.auth.uid;
    }
    
    /**
     * @description Checks if the requesting user is the author of the comment.
     * @param {object} comment The comment resource document.
     * @return {bool} True if the user is the author, false otherwise.
     */
    function isCommentAuthor(comment) {
      return isSignedIn() && comment.data.authorId == request.auth.uid;
    }

    /**
     * @description Validates the data for a community document.
     * @param {map} data The resource data from the request.
     * @return {bool} True if the data is valid, false otherwise.
     */
    function isCommunityDataValid(data) {
      return data.keys().hasAll(['name', 'description', 'creatorId', 'createdAt'])
             && (data.size() == 4 || (data.size() == 5 && data.keys().has('updatedAt')))
             && data.name is string && data.name.size() > 0 && data.name.size() < 50
             && data.description is string && data.description.size() < 500
             && data.creatorId is string && data.creatorId.size() > 0
             && (data.createdAt is timestamp || data.createdAt == request.time);
    }

    /**
     * @description Validates the data for a post document.
     * @param {map} data The resource data from the request.
     * @return {bool} True if the data is valid, false otherwise.
     */
    function isPostDataValid(data) {
      // Assumes communityId is passed for context in rules.
      return data.keys().hasAll(['title', 'content', 'authorId', 'createdAt', 'communityId'])
             && (data.size() == 5 || (data.size() == 6 && data.keys().has('updatedAt')))
             && data.title is string && data.title.size() > 0 && data.title.size() < 100
             && data.content is string && data.content.size() > 0
             && data.authorId is string && data.authorId.size() > 0
             && data.communityId is string
             && (data.createdAt is timestamp || data.createdAt == request.time);
    }

    /**
     * @description Validates the data for a comment document.
     * @param {map} data The resource data from the request.
     * @return {bool} True if the data is valid, false otherwise.
     */
    function isCommentDataValid(data) {
      // Assumes communityId and postId are passed for context.
      return data.keys().hasAll(['content', 'authorId', 'createdAt', 'communityId', 'postId'])
             && (data.size() == 5 || (data.size() == 6 && data.keys().has('updatedAt')))
             && data.content is string && data.content.size() > 0 && data.content.size() < 1000
             && data.authorId is string && data.authorId.size() > 0
             && data.communityId is string
             && data.postId is string
             && (data.createdAt is timestamp || data.createdAt == request.time);
    }
  }
}
